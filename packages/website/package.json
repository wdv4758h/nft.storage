{
  "name": "website",
  "version": "1.46.0",
  "description": "nft.storage website",
  "private": true,
  "license": "(Apache-2.0 OR MIT)",
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "yarn workspace nft.storage prepare && next build && next-sitemap && next export",
    "start": "next start",
    "test": "eslint './**/*.js' && tsc --build",
    "test:jest": "jest",
    "test:e2e": "npx playwright test",
    "test:ci": "jest --runInBand --maxWorkers=4",
    "lint:fix": "eslint './**/*.js' --fix-dry-run",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@magic-ext/oauth": "^0.11.2",
    "bytes": "^3.1.0",
    "clsx": "^1.1.1",
    "gray-matter": "^4.0.3",
    "ipfs-car": "0.6.2",
    "magic-sdk": "^6.2.1",
    "multiformats": "^9.6.4",
    "next-mdx-remote": "^4.0.0-rc.1",
    "nextra": "^2.0.0-beta.5",
    "nextra-theme-docs": "^2.0.0-beta.5",
    "nft.storage": "^6.0.0",
    "rc-tooltip": "^5.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "react-if": "4.0.1",
    "react-query": "^3.34.15",
    "react-tiny-popover": "^7.0.1",
    "swagger-ui-react": "^4.1.3",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@babel/generator": "^7.17.3",
    "@babel/plugin-syntax-jsx": "^7.16.7",
    "@next/bundle-analyzer": "^12.0.7",
    "@playwright/test": "^1.20.1",
    "@sentry/nextjs": "^6.17.7",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/bytes": "^3.1.1",
    "@types/react": "^17.0.34",
    "@types/swagger-ui-react": "^4.1.1",
    "eslint": "^8.4.1",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "git-rev-sync": "^3.0.1",
    "jscodeshift": "^0.13.1",
    "next": "^12.0.7",
    "next-sitemap": "^1.6.203",
    "postcss": "^8.4.8",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^7.3.3",
    "typescript": "4.4.4"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "next",
      "prettier"
    ],
    "env": {
      "jest": true,
      "es2020": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "args": "all",
          "argsIgnorePattern": "_",
          "varsIgnorePattern": "_"
        }
      ],
      "react/jsx-filename-extension": [
        "warn",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/display-name": "warn",
      "@next/next/no-img-element": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".next",
    "out"
  ]
}
